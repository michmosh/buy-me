{{yield}}

{{#bs-modal open=modal onSubmit=(action "submit") onHidden=(action (mut modal) false) as |modal|}}
  {{#modal.header}}
    <h4 class="modal-title">
      Add New Task
    </h4>
  {{/modal.header}}
  {{#modal.body}}
    {{input type="text" valueBinding="task.name" name="test" test="test" class="form-control"}}
    {{#if errorObject.show}}
    <div class="alert alert-danger error">{{errorObject.msg}}</div>
    {{/if}}
  {{/modal.body}}
  {{#modal.footer}}
    {{#bs-button onClick=(action modal.close)}}Cancel{{/bs-button}}
    {{#bs-button type="danger"}}Delete{{/bs-button}}
    {{#bs-button type="success" onClick=(action modal.submit task)}}Save{{/bs-button}}
  {{/modal.footer}}
{{/bs-modal}}
 <div class="circle " onclick={{action (action "openModal" )}}>{{fa-icon 'plus'}}</div>
